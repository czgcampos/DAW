extends layout
block content
  .w3-card-4
    header.w3-container.w3-teal
        h1 Gestão de obras musicais
    .w3-container
        .w3-row
            .w3-col.m4.l3
                h3 Queries disponíveis
                ul.w3-ul.w3-border
                    li
                        button.w3-button.w3-blue(id='q1') Q1: Quantas obras existem?
                    li
                        button.w3-button.w3-blue(id='q2') Q2: Listar obras
                    li
