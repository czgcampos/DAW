extends layout

block corpo
    .w3-container
        .w3-card-4
            header.w3-container.w3-blue
                h1= obra.titulo
            .w3-container
                table.w3-table.w3-bordered
                    if obra.titulo
                        tr
                            th Compositor
                            td= obra.compositor
                    tr
                        th Instrumentos
                        td
                            ul
                                each i in obra.instrumentos
                                    li 
                                        dl
                                            dt Nome
                                            dd=i.nome
                                            if i.partitura.voz 
                                                dt Voz
                                                dd= i.partitura.voz
                                            if i.partitura.path 
                                                dt Path
                                                dd= i.partitura.path
            footer.w3-container.w3-light-grey
                address Gerado por ObrasApp 
                a(href='http://localhost:5001') Voltar à página principal